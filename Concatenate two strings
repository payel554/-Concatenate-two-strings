#include <stdio.h>

int main() {
    char str1[100], str2[50];
    int i, j;

    printf("Enter first string: ");
    gets(str1);  

    printf("Enter second string: ");
    gets(str2);
    for (i = 0; str1[i] != '\0'; i++);

    for (j = 0; str2[j] != '\0'; j++, i++) {
        str1[i] = str2[j];
    }

    str1[i] = '\0';  

    printf("Concatenated string: %s\n", str1);

    return 0;
}



      Using strcat()



#include <stdio.h>
#include <string.h>

int main() {
    char str1[100], str2[50];

    printf("Enter first string: ");
    gets(str1);

    printf("Enter second string: ");
    gets(str2);

    strcat(str1, str2); // concatenate str2 to str1

    printf("Concatenated string: %s\n", str1);

    return 0;
}
